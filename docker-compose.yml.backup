version: '3.8'
services:
  postgres:
    image: postgis/postgis:15-3.3
    restart: always
    environment:
      POSTGRES_USER: argo_user
      POSTGRES_PASSWORD: argo_pass
      POSTGRES_DB: argo_db
    ports:
      - "5432:5432"
    volumes:
      - pgdata:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U argo_user -d argo_db"]
      interval: 30s
      timeout: 10s
      retries: 3

volumes:
  pgdata: